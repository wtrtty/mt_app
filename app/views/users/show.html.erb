<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar.present? %>
          <%= image_tag asset_path(@user.avatar.url), size: 200 %> <!-- ユーザープロフィール画像 -->
        <% else %>
          <%= image_tag asset_path("8d27ad3552fd86901f4976429ad22ce2.png"), size: 200 %> <!-- プロフィール画像未設定時のデフォルト画像 -->
        <% end %>
      </h1>
      <h1>
        <%= @user.name%>

        <% if current_user.active_likes?(@user) && @user.active_likes?(current_user) %>  <!--マッチしたユーザー-->
          <%= link_to 'メッセージ', chat_path(@user.id), class: "ml-3", style: "font-size: 0.5em;" %>
        <% end %>
      </h1>

      <p><%= @user.live %>
      <%= @user.age %>歳</p>
      <p>自己紹介</p>
      <p><%= @user.profile %></p>

      <!-- like buttun -->
      <%= render 'do_like_form' if logged_in? %>
      <!--h1><% if @user != current_user %>
            <%= link_to "いいね！", likes_path({user_id:@user.id,reaction: "like"}), data: { "turbo-method": :post} %>
          <% end %>
      </h1-->
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </section>
  </aside>
</div>
