<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url %>
        <% else %>
          <%= image_tag ("noavatar.png") %>
        <% end %>

        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
