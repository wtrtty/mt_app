<% provide(:title, 'Sign up') %>
<h1>プロフィール編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, 'ニックネーム' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'パスワード確認用' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :live, '居住地' %>
      <%= f.collection_select :live, JpPrefecture::Prefecture.all, :name, :name, { include_blank: '選択してください'}, { selected: @user.live } %>

      <%= f.label :avatar, 'プロフィール画像' %>
      <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.label :profile, '自己紹介' %>
      <%= f.text_area :profile, autocomplete: 'off', :size =>"50x10" %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
 </div>